<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://media.gqmagazine.fr/photos/603e6a8da9360b0585bcbc6a/16:9/w_2560%2Cc_limit/108387402)">
<h1 class="font-roboto fs-1">New list</h1>
</div>

<div class="d-flex justify-content-between w-100 mt-3">
  <div class="mx-2 w-75">
    <%= simple_form_for [@list] do |f| %>
      <%= f.input :name, class: "form-label"%>
      <%= f.input :photo, as: :file, class: "form-label" %>
      <%= f.submit class: "btn btn-primary rounded-4" %>
    <% end %>
  </div>
  <div class="mx-auto">
  <%= link_to 'Back to lists', root_path, class: "btn btn-success text-white h-15 shadow-sm rounded-4" %>
  </div>
</div>
